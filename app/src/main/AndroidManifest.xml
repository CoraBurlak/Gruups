<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gruups" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name=".Start"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Send"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName=".Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruups.Send" />
        </activity>
        <activity
            android:name=".Receive"
            android:label="Gruups"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName=".Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruups.Receive" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Gruups"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName=".Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruups.Receive" />
        </activity>
        <activity
            android:name=".Receive$PollStart"
            android:label="Gruups"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName=".Receive" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruups.Receive" />
        </activity>
        <activity
            android:name=".MainActivity$pollingActivity"
            android:label="Gruups"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName=".Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruups.Receive" />
        </activity>
        <activity
            android:name=".IPEnter"
            android:label="Gruups"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName=".Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruups.Receive" />
        </activity>
        <service
            android:name =".MessageTransfer" />
    </application>

</manifest>
